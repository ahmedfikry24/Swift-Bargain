<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.SwiftBargain" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="mainActivityTheme" parent="Base.Theme.SwiftBargain">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">@drawable/launcher_background</item>
    </style>
</resources>